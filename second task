import java.util.Scanner;

public class Variant1Task2 {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        System.out.print("Введіть ціле число: ");
        int num = sc.nextInt();

        int original = num;

        int reversedWhile = 0;
        int temp = num;

        while (temp != 0) {
            int digit = temp % 10;
            reversedWhile = reversedWhile * 10 + digit;
            temp /= 10;
        }

        System.out.println("\nРезультат через while:");
        System.out.printf("Початкове: %d\n", original);
        System.out.printf("Реверс: %010d\n", reversedWhile);



        temp = num;
        int reversedDo = 0;

        do {
            int digit = temp % 10;
            reversedDo = reversedDo * 10 + digit;
            temp /= 10;
        } while (temp != 0);

        System.out.println("\nРезультат через do-while:");
        System.out.printf("Початкове: %d\n", original);
        System.out.printf("Реверс: %010d\n", reversedDo);
    }
}
